@page "/"
@using BlazorApp.Core.Services
@using BlazorApp.Shared.Constants
@using Microsoft.AspNetCore.Components.Authorization
@inject IUserRepository UserRepository
@inject ILoanApplicationService LoanApplicationService
@inject IAuthenticationService AuthService
@inject ApplicationDbContext DbContext
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Dashboard - BlazorApp</PageTitle>

@if (isCheckingAuth)
{
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Checking authentication...</p>
            </div>
        </div>
    </div>
}
else if (isAuthenticated)
{
    <!-- Redirect to appropriate dashboard -->
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Redirecting...</span>
                </div>
                <p class="mt-2">Redirecting to your dashboard...</p>
            </div>
        </div>
    </div>
}
else
{
    <!-- Public landing page -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="hero-section text-center py-5">
                    <h1 class="display-4 fw-bold mb-4">Welcome to BlazorApp</h1>
                    <p class="lead mb-4">Your trusted partner for loan applications and financial services</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="/login" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Sign In
                        </a>
                        <a href="/login" class="btn btn-outline-primary btn-lg">
                            <i class="bi bi-person-plus me-2"></i>
                            Get Started
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="row g-4 mb-5">
            <div class="col-md-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-shield-check text-primary" style="font-size: 3rem;"></i>
                        <h5 class="card-title mt-3">Secure & Safe</h5>
                        <p class="card-text">
                            Your data is protected with enterprise-grade security and encryption.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-lightning text-success" style="font-size: 3rem;"></i>
                        <h5 class="card-title mt-3">Fast Processing</h5>
                        <p class="card-text">
                            Get quick decisions on your loan applications with our streamlined process.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 text-center">
                    <div class="card-body">
                        <i class="bi bi-headset text-info" style="font-size: 3rem;"></i>
                        <h5 class="card-title mt-3">24/7 Support</h5>
                        <p class="card-text">
                            Our dedicated support team is here to help you every step of the way.
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Section -->
        @if (!loading)
        {
            <div class="row g-3 mb-4">
                <div class="col-xl-3 col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-subtitle mb-2 text-muted">Total Users</h6>
                                    <h3 class="card-title mb-0">@dashboardData.TotalUsers</h3>
                                </div>
                                <div class="text-primary">
                                    <i class="bi bi-people fs-1"></i>
                                </div>
                            </div>
                            <small class="text-success">
                                <i class="bi bi-arrow-up"></i> +12% from last month
                            </small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-subtitle mb-2 text-muted">Active Orders</h6>
                                    <h3 class="card-title mb-0">@dashboardData.ActiveOrders</h3>
                                </div>
                                <div class="text-warning">
                                    <i class="bi bi-cart fs-1"></i>
                                </div>
                            </div>
                            <small class="text-success">
                                <i class="bi bi-arrow-up"></i> +8% from last month
                            </small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-subtitle mb-2 text-muted">Total Revenue</h6>
                                    <h3 class="card-title mb-0">@dashboardData.TotalRevenue.ToString("C")</h3>
                                </div>
                                <div class="text-success">
                                    <i class="bi bi-currency-dollar fs-1"></i>
                                </div>
                            </div>
                            <small class="text-success">
                                <i class="bi bi-arrow-up"></i> +15% from last month
                            </small>
                        </div>
                    </div>
                </div>
                <div class="col-xl-3 col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-subtitle mb-2 text-muted">Loan Applications</h6>
                                    <h3 class="card-title mb-0">@dashboardData.TotalLoanApplications</h3>
                                </div>
                                <div class="text-info">
                                    <i class="bi bi-file-earmark-text fs-1"></i>
                                </div>
                            </div>
                            <small class="text-success">
                                <i class="bi bi-arrow-up"></i> +25% from last month
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private bool loading = true;
    private bool isCheckingAuth = true;
    private bool isAuthenticated = false;
    private DashboardData dashboardData = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
        
        // Check authentication status
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        
        if (isAuthenticated)
        {
            // Redirect to appropriate dashboard based on role
            if (await AuthService.IsAdminAsync())
            {
                Navigation.NavigateTo("/admin", forceLoad: true);
            }
            else if (await AuthService.IsMemberAsync())
            {
                Navigation.NavigateTo("/member", forceLoad: true);
            }
        }
        
        isCheckingAuth = false;
        loading = false;
    }

    private async Task LoadDashboardData()
    {
        try
        {
            // Load user statistics
            var users = await UserRepository.GetAllAsync();
            dashboardData.TotalUsers = users.Count();

            // Load order statistics
            var orders = await DbContext.Orders.Where(o => !o.IsDeleted).ToListAsync();
            dashboardData.ActiveOrders = orders.Count(o => o.Status != "Delivered" && o.Status != "Cancelled");
            dashboardData.TotalRevenue = orders.Sum(o => o.TotalAmount);

            // Load loan application statistics
            var loanStats = await LoanApplicationService.GetStatisticsAsync();
            dashboardData.TotalLoanApplications = Convert.ToInt32(loanStats.GetValueOrDefault("TotalApplications", 0));
            dashboardData.NewApplicationsThisWeek = Convert.ToInt32(loanStats.GetValueOrDefault("NewApplicationsThisWeek", 0));
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard data: {ex.Message}");
        }
    }

    private class DashboardData
    {
        public int TotalUsers { get; set; }
        public int ActiveOrders { get; set; }
        public decimal TotalRevenue { get; set; }
        public int TotalLoanApplications { get; set; }
        public int NewApplicationsThisWeek { get; set; }
    }
}